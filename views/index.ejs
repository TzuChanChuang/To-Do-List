<!DOCTYPE html>
<html>
  <head>
    <title>To Do List</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" href="bootstrap.min.css">
  </head>
  <body>
  <div class="all">
    <div>
      <h1>今天要做什麼呢?</h1> 
     <form action="/add" method="post" >
      <input type="text" id="bar"  placeholder="New todo" name="addItem">
      <button class="btn">提交</button>
     </form>
    </div>
    <div>
      <h1>待完成</h1>
      <div class="todo">
        <% items.forEach(function(item) {  %>
          <% if (!item.done) { %>
            <div class="line">
              <span><%= item.item %></span>
              <button>完成</button>
              <button>刪除</button>
            </div>
          <% } %>
        <% }); %>
      </div>
    </div>
    <div>
      <h1>完成囉</h1>

    </div>
  </div>
  <script src="index.js"></script>
  </body>
</html>
